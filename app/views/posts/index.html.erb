<div class="container flex flex-col space-y-2">
  <div class="flex flex-col	place-items-end mr-4">
    <%= link_to "Add New Post", new_user_category_post_path(current_user.id), class: "right-0 mt-4 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
  </div>
  <div class=" container px-2 flex justify-center mt-4">
    <ul class="bg-white rounded-lg border border-gray-200 w-full text-gray-900">
    <% @posts.each do |post| %>
      <li class=" flex justify-between place-content-around px-6 py-4 border-b border-gray-200 w-full">
        <%= link_to post.title, user_category_post_path(current_user.id, @category, post.id), data: { turbo_method: :get }, class: "text-gray-900 hover:text-gray-900 focus:text-gray-900" %>
        <div class="flex space-x-3 justify-center">
          <%= link_to "Edit", edit_user_category_post_path(current_user.id, @category, post.id), class: "text-gray-900 hover:text-gray-900 focus:text-gray-900" %>
          <%= link_to "Delete", user_category_post_path(current_user.id, @category, post.id), data: { turbo_method: :delete }, class: "text-gray-900 hover:text-gray-900 focus:text-gray-900" %>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>